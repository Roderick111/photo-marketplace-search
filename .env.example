# Photo to Marketplace Search - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Anthropic API Configuration
# =============================================================================

# Your Anthropic API key (get one at https://console.anthropic.com/)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Claude model to use for vision analysis
# Recommended: claude-sonnet-4-20250514 (best vision performance)
CLAUDE_MODEL=claude-sonnet-4-20250514

# =============================================================================
# OPTIONAL: File Upload Configuration
# =============================================================================

# Maximum upload size in megabytes (default: 10)
MAX_UPLOAD_SIZE_MB=10

# Directory for temporary file uploads (default: uploads)
UPLOAD_DIR=uploads

# =============================================================================
# OPTIONAL: API Limits
# =============================================================================

# Timeout for Vision API calls in seconds (default: 30)
VISION_API_TIMEOUT=30

# Maximum concurrent uploads (default: 10)
MAX_CONCURRENT_UPLOADS=10
